<tiles-definitions>
	<definition name="mainLayout" template="file://src/main/webapp/WEB-INF/jsp/main/home.jsp">
		<put-attribute name="header" value="file://src/main/webapp/WEB-INF/jsp/main/header.jsp">

		</put-attribute>
		<put-attribute name="footer" value="file://src/main/webapp/WEB-INF/jsp/main/footer.jsp">
		</put-attribute>
		
	</definition>
	<definition name="mainAreaLayout" template="file://src/main/webapp/WEB-INF/jsp/main/mainArea.jsp">
		<put-attribute name="header" value="file://src/main/webapp/WEB-INF/jsp/main/header.jsp">

		</put-attribute>
		<put-attribute name="left" value="file://src/main/webapp/WEB-INF/jsp/main/left.jsp">

		</put-attribute>
