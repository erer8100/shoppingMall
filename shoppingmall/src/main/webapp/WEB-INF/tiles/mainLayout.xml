		</put-attribute>
		
		
	</definition>
	
	
	<definition name="contents/*" extends="mainAreaLayout">
		<put-attribute name="contents" value="file://src/main/webapp/WEB-INF/jsp/contents/{1}.jsp">
		
		</put-attribute>
		
	</definition>
	<definition name="manage/*" extends="mainAreaLayout">
		<put-attribute name="contents" value="file://src/main/webapp/WEB-INF/jsp/manage/{1}.jsp">
		
		</put-attribute>
		
	</definition>
	<definition name="main/home" extends="mainAreaLayout">
		<put-attribute name="contents" value="file://src/main/webapp/WEB-INF/jsp/main/default.jsp">
		
		</put-attribute>
	</definition>
	<definition name="div/*" template="file://src/main/webapp/WEB-INF/jsp/contents/{1}.jsp">
		
	</definition>
	
